<% if @user = nil %>
  <h1> Sign up to Chitter! </h1>
<% else %>
  <h2>You are already signed in. Sign out to create a new account.</h2>
<% end %>
<div class="container">
  <div class="row">
    <form action='/users/new' method='post'>
      <input id='username' type='text' name='username' placeholder='Username'required>
      <br>
      <input id='email' type='text' name='email' placeholder="Email address" required>
      <br>
      <input type='text' name='password' placeholder="Password" required>
      <br>
      <input type='text' name='password_confirmation' placeholder="Reconfirm password" required>
      <br>
      <div class="row">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
      </div>
    </form>  
  </div>
</div>  
